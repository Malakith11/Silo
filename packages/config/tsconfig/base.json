{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@silo/ui": ["../../../packages/ui/src"],
      "@silo/core": ["../../../packages/core/src"]
    }
  },
  "include": ["src", "index.ts", "next-env.d.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
